{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tweak/meta.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "publicationKey": {
      "type": "string",
      "description": "Publikasjons-n√∏kkel"
    },
    "defaultMetaDescription": {
      "type": "string",
      "description": "Default meta-description"
    },
    "metaDescriptions": {
      "type": "array",
      "description": "Meta-descriptions for tags & categories",
      "items": {
        "$ref": "#/definitions/tagMetaDescription"
      }
    },
    "_type": {
      "type": "string",
      "description": "Sanity type of object."
    },
    "_id": {
      "type": "string",
      "description": "Unique sanity document id"
    },
    "_rev": {
      "type": "string",
      "description": "Sanity revision id"
    },
    "_createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Date the document was created"
    },
    "_updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Dato of last document update"
    }
  },
  "required": [
    "publicationKey",
    "defaultMetaDescription",
    "_type",
    "_id",
    "_rev",
    "_createdAt",
    "_updatedAt"
  ],
  "definitions": {
    "tagMetaDescription": {
      "type": "object",
      "properties": {
        "tag": {
          "type": "string",
          "description": "Tag / Seksjon / Kategori"
        },
        "description": {
          "type": "string",
          "description": "Description"
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "tag",
        "description",
        "_type"
      ],
      "additionalProperties": false
    }
  }
}