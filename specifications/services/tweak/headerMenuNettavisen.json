{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tweak/headerMenuNettavisen.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "publicationKey": {
      "type": "string",
      "description": "Publikasjons-nøkkel"
    },
    "tipUs": {
      "type": "object",
      "description": "Tips oss",
      "properties": {
        "email": {
          "type": "string",
          "description": "Epost"
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "email",
        "_type"
      ],
      "additionalProperties": false
    },
    "showSearch": {
      "type": "boolean",
      "description": "Vis søkefelt"
    },
    "showTitlePostfix": {
      "type": "boolean",
      "description": "Vis seksjon etter tittel"
    },
    "showLogoImg": {
      "type": "boolean",
      "description": "Bruk logobilde"
    },
    "mainMenu": {
      "$ref": "#/definitions/nestedLinkSection"
    },
    "sectionMenu": {
      "$ref": "#/definitions/linkSection"
    },
    "usefulLinks": {
      "$ref": "#/definitions/linkSection"
    },
    "_type": {
      "type": "string",
      "description": "Sanity type of object."
    },
    "_id": {
      "type": "string",
      "description": "Unique sanity document id"
    },
    "_rev": {
      "type": "string",
      "description": "Sanity revision id"
    },
    "_createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Date the document was created"
    },
    "_updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Dato of last document update"
    }
  },
  "required": [
    "publicationKey",
    "_type",
    "_id",
    "_rev",
    "_createdAt",
    "_updatedAt"
  ],
  "definitions": {
    "nestedLinkSection": {
      "type": "object",
      "properties": {
        "elements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/childLinkSection"
          }
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "_type"
      ],
      "additionalProperties": false
    },
    "linkSection": {
      "type": "object",
      "properties": {
        "elements": {
          "type": "array",
          "description": "Lenker",
          "items": {
            "$ref": "#/definitions/link"
          }
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "_type"
      ],
      "additionalProperties": false
    },
    "childLinkSection": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Tittel"
        },
        "href": {
          "type": "string",
          "description": "URL"
        },
        "designColorName": {
          "type": "string",
          "description": "Farge"
        },
        "elements": {
          "type": "array",
          "description": "Lenker",
          "items": {
            "$ref": "#/definitions/link"
          }
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "title",
        "href",
        "designColorName",
        "_type"
      ],
      "additionalProperties": false
    },
    "link": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Tittel"
        },
        "href": {
          "type": "string",
          "description": "URL"
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "title",
        "href",
        "_type"
      ],
      "additionalProperties": false
    }
  }
}