{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metadata/content.json",
  "type": "object",
  "description": "Content",
  "additionalProperties": false,
  "properties": {
    "site": {
      "$ref": "./sanityTypes.json#/definitions/reference"
    },
    "tags": {
      "type": "array",
      "description": "Tags",
      "items": {
        "type": "object",
        "description": "Tag",
        "properties": {
          "reference": {
            "$ref": "./sanityTypes.json#/definitions/reference"
          },
          "status": {
            "type": "array",
            "description": "Status",
            "items": {
              "$ref": "#/definitions/labelStatus"
            }
          },
          "_type": {
            "type": "string",
            "description": "Sanity type of object."
          }
        },
        "required": [
          "_type"
        ],
        "additionalProperties": false
      }
    },
    "_type": {
      "type": "string",
      "description": "Sanity type of object."
    },
    "_id": {
      "type": "string",
      "description": "Unique sanity document id"
    },
    "_rev": {
      "type": "string",
      "description": "Sanity revision id"
    },
    "_createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Date the document was created"
    },
    "_updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Dato of last document update"
    }
  },
  "required": [
    "_type",
    "_id",
    "_rev",
    "_createdAt",
    "_updatedAt"
  ],
  "definitions": {
    "labelStatus": {
      "type": "object",
      "description": "Label Status",
      "properties": {
        "source": {
          "type": "string",
          "description": "Source"
        },
        "user": {
          "type": "string",
          "description": "User"
        },
        "value": {
          "type": "string",
          "description": "Value"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "_type": {
          "type": "string",
          "description": "Sanity type of object."
        }
      },
      "required": [
        "_type"
      ],
      "additionalProperties": false
    }
  }
}